<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Process Status config -->
        <record id="process_status_view_form" model="ir.ui.view">
            <field name="name">process.statuses.view.form</field>
            <field name="model">process.statuses</field>
            <field name="arch" type="xml">
                <form string="Process Status">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="process_status_view_tree" model="ir.ui.view">
            <field name="name">process.statuses.view.tree</field>
            <field name="model">process.statuses</field>
            <field name="arch" type="xml">
                <tree string="Process Status">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="process_status_action_config_sale" model="ir.actions.act_window">
            <field name="name">Process Status</field>
            <field name="res_model">process.statuses</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="sale_menu_config_process_status_uuu"
                  action="process_status_action_config_sale"
                  parent="sale.menu_sale_config"
                  groups="base.group_no_one"
        />
    </data>
</odoo>